<%= User.find_by(id: cookies["user_id"]).name if cookies["user_id"].present? %>

<aside>
  <h3>Recommended For You</h3>
  <% if cookies["movie_id"].present? %>
    <%= render Movie.find_by(id: cookies["movie_id"]) %>
  <% else %>
    <%= render Movie.sample %>
  <% end %>
</aside>

<div class="movie-selections">
  <%= render 'movie', movie: nil %>
  <%= render @movies %>
</div>
